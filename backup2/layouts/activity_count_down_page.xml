<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/milkblue" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/plaan_general_clock_4" />

    <TextView
        android:id="@+id/tvBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlTimer"
        android:layout_centerHorizontal="true"
        android:text="Break"
        android:textColor="@color/darkyellow"
        android:textSize="20sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rlTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/tvActivitiesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Meeting With Jo"
            android:textColor="@color/lightergrey"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvActivitiesName"
            android:layout_centerInParent="true"
            android:text="180:00"
            android:textColor="@color/darkyellow"
            android:textSize="65sp" />
    </RelativeLayout>
p
    <RelativeLayout
        android:id="@+id/rlLoopInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlTimer"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/tvLoopLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/lightgrey"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvLoopLeft"
            android:text="X"
            android:textColor="@color/darkyellow"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/darkyellow" >

        <TextView
            android:id="@+id/tvDONE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="DONE"
            android:textColor="@color/lightergrey"
            android:textSize="50sp" />
    </RelativeLayout>

</RelativeLayout>