<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/milkblue" >

    <ImageView
        android:id="@+id/ivRedBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/red_date_day_bar" />

    <LinearLayout
        android:id="@+id/llTodaysDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivWeather"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today,"
            android:textColor="@color/lightgrey"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tvTodaysDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00 jan 0000"
            android:textColor="@color/lightgrey"
            android:textSize="40sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ivRedBar"
        android:src="@drawable/grey_weather_bar" />

    <LinearLayout
        android:id="@+id/llYHTOF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvYHTTOf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="You have total time of"
            android:textColor="@color/lightgrey"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvMinutesLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:text="000"
            android:textColor="@color/lightgrey"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/tvMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-13dp"
            android:text="MIN"
            android:textColor="@color/darkyellow"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>